<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_message_center"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_type">
 <LinearLayout
    android:orientation="horizontal" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
    android:orientation="vertical" 
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="3">
    <TextView 
        android:id="@+id/tv_title_message_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:drawablePadding="5dp"
        android:textSize="17sp"/>
    <TextView 
        android:id="@+id/tv_detail_message_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:textSize="12sp"/>
    <TextView 
        android:id="@+id/tv_time_message_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:textSize="10sp"/>
    </LinearLayout>
     <ImageView 
        android:id="@+id/iv_enter_message_detail"
        android:src="@drawable/ic_chevron_right_black_24dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="15sp"/>
  </LinearLayout>
  <include layout="@layout/list_message_center_hide"/>
</LinearLayout>