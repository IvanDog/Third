<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#FFFFFF"
    android:orientation="vertical" >
       <LinearLayout 
        android:id="@+id/linear_parking_address_parking_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
            <TextView 
            android:id="@+id/tv_parking_address_title_parking_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:gravity="left"
            android:drawableLeft="@drawable/ic_park_location_32px"
            android:text="@string/parkingAddressTitleParkingDetail"
            android:textColor="@color/orange"
            android:textSize="18sp"/>
            <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical" >
                <TextView 
                android:id="@+id/tv_parking_number_parking_detail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:gravity="left"    
                android:textSize="15sp"/>
                <TextView 
                android:id="@+id/tv_location_number_parking_detail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:gravity="left"
                android:textSize="15sp"/>
            </LinearLayout>
       </LinearLayout>
       <View
             android:id="@+id/list_divider_first_parking_detail"  
             android:layout_below="@+id/linear_parking_address_parking_detail"
             android:layout_width="match_parent"  
              android:layout_height="1dp"
              android:background="@color/gray"
              android:layout_margin="10dp" >
      </View>
       <LinearLayout 
        android:id="@+id/linear_car_information_parking_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_divider_first_parking_detail"
        android:orientation="horizontal">
            <TextView 
            android:id="@+id/tv_car_information_title_parking_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:gravity="left"
            android:drawableLeft="@drawable/ic_car_information_32px"
            android:text="@string/carInformationTitleParkingDetail"
            android:textColor="@color/orange"
            android:textSize="18sp"/>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
                <TextView 
                android:id="@+id/tv_license_plate_number_parking_detail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:gravity="left"
                android:text="@string/licensePlateNumberLeaving"
                android:textSize="15sp"/>
                <TextView 
                android:id="@+id/tv_car_type_parking_detail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:gravity="left"
                android:textSize="15sp"/>
                <TextView 
                android:id="@+id/tv_parking_type_parking_detail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:gravity="left"
                android:textSize="15sp"/>
            </LinearLayout>
       </LinearLayout>
        <View
             android:id="@+id/list_divider_second_parking_detail"  
             android:layout_below="@+id/linear_car_information_parking_detail"
             android:layout_width="match_parent"  
              android:layout_height="1dp"
              android:background="@color/gray"
              android:layout_margin="10dp">
       </View>
       <LinearLayout 
        android:id="@+id/linear_parking_time_parking_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_divider_second_parking_detail"
        android:orientation="horizontal">
           <TextView 
            android:id="@+id/tv_parking_time_title_parking_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:gravity="left"
            android:drawableLeft="@drawable/ic_start_time_32px"
            android:text="@string/parkingTimeTitleParkingDetail"
            android:textColor="@color/orange"
            android:textSize="18sp"/>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
                 <TextView 
                 android:id="@+id/tv_start_time_parking_detail"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:paddingLeft="10dp"
                 android:paddingRight="10dp"
                 android:paddingTop="3dp"
                 android:paddingBottom="3dp"
                 android:gravity="left"
                 android:textSize="15sp"/>
       </LinearLayout>
   </LinearLayout>
</RelativeLayout>