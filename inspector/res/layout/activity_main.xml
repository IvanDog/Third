<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#E94509"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView 
       android:id="@+id/tv_user_number"
       android:layout_height="wrap_content"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:gravity="left"
       android:textColor="@color/white" />
     <TextView 
       android:id="@+id/tv_check_point_number"
       android:layout_height="wrap_content"
       android:layout_width="0dp"
       android:layout_weight="1" 
       android:gravity="left"
       android:textColor="@color/white" />
     <TextView 
       android:id="@+id/tv_user_time"
       android:layout_height="wrap_content"
       android:layout_width="0dp"
       android:layout_weight="1" 
       android:gravity="right"
       android:textColor="@color/white" />
</LinearLayout>
<TextView 
       android:id="@+id/tv_park_number"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:layout_marginTop="5dp"
       android:paddingLeft ="8dp"
       android:paddingRight="8dp"
       android:gravity="left"
       android:background="@color/gray"
       android:textColor="@color/orange" />
<TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background = "#FFFFFF"
        android:stretchColumns="*"
        android:weightSum="3" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            <Button
                android:id="@+id/bt_integrated_query"
                android:drawableLeft="@drawable/ic_integrated_query"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/integratedQueryButton"/>  
            <Button
                android:id="@+id/bt_parking_query"
                android:drawableLeft="@drawable/ic_parking_query"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/parkingQueryButton" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            <Button
                android:id="@+id/bt_inspect"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawableLeft="@drawable/ic_inspect"
                android:text="@string/inspectButton"/>
             <Button
                android:id="@+id/bt_supervision_guide"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawableLeft="@drawable/ic_supervision_guide"
                android:text="@string/supervisionGuideButton"/>
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            <Button
                android:id="@+id/bt_work_attendance"
                android:drawableLeft="@drawable/ic_work_attendance"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/workAttendanceButton"/>
            <Button
                android:id="@+id/bt_user_account"
                android:drawableLeft="@drawable/ic_user_account"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/userAccountButton" />
        </TableRow>
    </TableLayout>
</LinearLayout>